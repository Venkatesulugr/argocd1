apiVersion: apps/v1
kind: Deployment
metadata:
  name: argocd-dex-server
  namespace: argocd
  labels:
    app: argocd
    component: dex-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: argocd
      component: dex-server
  template:
    metadata:
      labels:
        app: argocd
        component: dex-server
    spec:
      containers:
        - name: argocd-dex-server
          image: quay.io/dexidp/dex:v2.27.0
          ports:
            - containerPort: 5556
              name: http
---
apiVersion: v1
kind: Service
metadata:
  name: argocd-dex-server
  namespace: argocd
  labels:
    app: argocd
    component: dex-server
spec:
  selector:
    app: argocd
    component: dex-server
  ports:
    - name: http
      port: 5556
      targetPort: 5556
  type: NodePort
